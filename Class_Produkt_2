class Produkt
	@kategorie[]
	@error = "Error!"

	szukaj_n(x,y[])
		y.each do |i|
			if x == y[i]
				return i
			end
		end
		return "Error szukana wartosc nie istnieje!"
	end

	def czy_i(arra[],n)
		arra.each do |x|
			if arra[x] == n
				return true
			end
		end
		return false
	end

	def czy_w_kat(nazwa_p,nazwa_k)
		for nazwa_k.arra.each do |i|
			if nazwa_k.arra[i].name == nazwa_p
				return true
			end
		end
		return false
	end

	def dodaj_kategorie(kat)
		@kategorie.push(kat = {	"name" => kat,
					"arra" => []})
	end

	def dodaj_produkt(kat,nazwa_p,ilosc_p)
		kat_n = szukaj_n(kat,@kategorie)
		if czy_i(@kategorie[kat_n.arra[]],nazwa_p) == #istnieje!!!
			pro_n = szukaj(nazwa_p,@kategorie[kat_n].arra)
			@kategorie[kat_n].arra[pro_n].ilosc += ilosc_p
		else
			@kategorie[szukaj_n(kat,@kategorie)].arra.push = {	"name" => nazwa_p,
										"ilosc" => iloscP}
		end
	end

	def dodaj_kategorie(nazwa)
		if czy_i(@kategorie,nazwa)
			puts "Kategoria o tej nazwie juz istnieje!"
		else
			@kategorie.push(nazwa)
		end
	end
	def usun_kategorie(nazwa_k)
		@kategorje.delete_at(szukaj_n(nazwa_k,@kategorie))
	end

	def usun_produkt(nazwa_p,nazwa_k)
		kat_n = szukaj_n(nazwa_k,@kategorie)
		pro_n = szukaj_n(nazwa_k,@kategorie[kat_n].arra)
		@kategorie[kat_n].arra.delete_at(pro_n)
	end

	def pokaz
		for @kategorie.each do |x|
			print "\n#{@kategorie[x.name]}"
			for @kategorie[x].arra.each do |i|
				print @kategorie[x].arra[i].name
				print @kategorie[x].arra[i].ilosc
			end
		end
	end

end
